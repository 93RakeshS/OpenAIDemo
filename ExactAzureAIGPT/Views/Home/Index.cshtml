        <button type="button" class="btn btn-outline-danger mt-3" id="addShotMessage">Add Shot Examples</button>
        <div class="shotMessageContainer">
        </div>

    </div>

    <div class="block col-md-7 shadow transformed" id="rightPanel">
        <div class="chat-header">
            <div class="chat-session">
                Chat Session
            </div>
                <button type="button" id="clearResponse" class="btn btn-danger" value="Clear">Clear chat</button>
        </div>
        <div class="message-container" id="responseDiv" rows="10" cols="65"></div>
        <div  class="home-footer">
            <textarea placeholder="User message" class="form-control" id="promptValue" rows="3" cols="65"></textarea>
            <div class="float-end">
                <button id="generateResponse" type="button" class="btn btn-outline-danger">
                    <span class="spinner-border spinner-border-sm" style="display: none;" id="spinner" role="status"
                        aria-hidden="true"></span>
                    Generate
                </button>
            </div>
        </div>
    </div>
</div>


