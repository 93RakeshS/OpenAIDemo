<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DEVON GPT</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="header-inner">
            <div class="left-content">
                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/devon-waada-cap-logo.png" alt="DevOn Logo" class="img-fluid" />
                </a>
            </div>
            <div class="welcome">Welcome @(ViewData["Username"])</div>
            <a href="/.auth/logout" class="logout">Logout</a>
        </div>
        <div class="header-secondary">
            @{
                if (ViewBag.IsUserAllowed == true)
                    Html.RenderPartial("_AssistantButtons");
            }
        </div>
    </header>
    <div class="main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EOL GPT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/home.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>